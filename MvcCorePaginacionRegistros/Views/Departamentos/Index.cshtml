@model List<Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                DeptNo
            </th>
            <th>
                Nombre
            </th>
            <th>
                Localidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    <a asp-controller="Departamentos" asp-action="Details"
                       asp-route-iddepart="@item.DeptNo" class="btn btn-primary">
                        Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
